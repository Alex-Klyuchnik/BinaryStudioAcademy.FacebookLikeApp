@using System.Web.UI.WebControls
@model BinaryStudioAcademy.FacebookLikeApp.Models.User
@{
    ViewBag.Title = "Profile Info";
}

<h2>Your profile</h2>

<div>
   @if (Model != null)
   {
       <html>
       Name: @Model.fullName
       <br/>
       Email: @Model.email
       <br/>
       Gender: @Model.gender
       <br/>
       DoB: @Model.dateOfBirth
       <br/>
       Marital status: @Model.maritalStatus
       </html>
   }
     
</div>

@Html.ActionLink("Add a friend", "AddFriend", "Profile")
<br/>
@Html.ActionLink("Edit your profile","Edit","Profile")
